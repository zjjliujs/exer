<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/title_config"
        style="@style/list_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/config"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- server config title -->
    <TextView
        android:id="@+id/tv_server_config"
        style="@style/list_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/server_config"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_config" />

    <View
        android:id="@+id/divider_server"
        style="@style/list_item"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/list_divider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_server_config" />

    <!-- server dispatch rate config -->
    <TextView
        android:id="@+id/tv_dispatch_rate"
        style="@style/list_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dispatch_rate"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider_server" />

    <EditText
        android:id="@+id/et_dispatch_rate"
        style="@style/config_edit_text"
        android:layout_width="@dimen/edit_text_width"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/tv_dispatch_rate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_dispatch_rate" />

    <!-- shelf config title -->
    <TextView
        android:id="@+id/tv_shelf_config"
        style="@style/list_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/shelf_config"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_dispatch_rate" />

    <View
        android:id="@+id/divider_shelf"
        style="@style/list_item"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/list_divider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_shelf_config" />

    <!-- hot shelf config -->
    <TextView
        android:id="@+id/tv_hot_shelf_capacity"
        style="@style/list_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hot_shelf_capacity"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider_shelf" />

    <EditText
        android:id="@+id/et_hot_shelf_capacity"
        style="@style/config_edit_text"
        android:layout_width="@dimen/edit_text_width"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/tv_hot_shelf_capacity"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_hot_shelf_capacity" />

    <!-- cold shelf config -->
    <TextView
        android:id="@+id/tv_cold_shelf_capacity"
        style="@style/list_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cold_shelf_capacity"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_hot_shelf_capacity" />

    <EditText
        android:id="@+id/et_cold_shelf_capacity"
        style="@style/config_edit_text"
        android:layout_width="@dimen/edit_text_width"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/tv_cold_shelf_capacity"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_cold_shelf_capacity" />

    <!-- Frozen shelf config -->
    <TextView
        android:id="@+id/tv_frozen_shelf_capacity"
        style="@style/list_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/frozen_shelf_capacity"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_cold_shelf_capacity" />

    <EditText
        android:id="@+id/et_frozen_shelf_capacity"
        style="@style/config_edit_text"
        android:layout_width="@dimen/edit_text_width"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/tv_frozen_shelf_capacity"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_frozen_shelf_capacity" />

    <!-- Overflow shelf config -->
    <TextView
        android:id="@+id/tv_overflow_shelf_capacity"
        style="@style/list_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/overflow_shelf_capacity"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_frozen_shelf_capacity" />

    <EditText
        android:id="@+id/et_overflow_shelf_capacity"
        style="@style/config_edit_text"
        android:layout_width="@dimen/edit_text_width"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/tv_overflow_shelf_capacity"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_overflow_shelf_capacity" />

    <!-- Courier config title -->
    <TextView
        android:id="@+id/tv_courier_config"
        style="@style/list_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/shelf_config"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_overflow_shelf_capacity" />

    <View
        android:id="@+id/divider_courier"
        style="@style/list_item"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/list_divider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_courier_config" />

    <!-- Courier min delay -->
    <TextView
        android:id="@+id/tv_courier_min_delay"
        style="@style/list_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/courier_min_delay"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_courier_config" />

    <EditText
        android:id="@+id/et_courier_min_delay"
        style="@style/config_edit_text"
        android:layout_width="@dimen/edit_text_width"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/tv_courier_min_delay"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_courier_min_delay" />

    <!-- Courier max delay -->
    <TextView
        android:id="@+id/tv_courier_max_delay"
        style="@style/list_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/courier_max_delay"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_courier_min_delay" />

    <EditText
        android:id="@+id/et_courier_max_delay"
        style="@style/config_edit_text"
        android:layout_width="@dimen/edit_text_width"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/tv_courier_max_delay"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_courier_max_delay" />


</androidx.constraintlayout.widget.ConstraintLayout>